<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>Ch-store</display-name>
	<welcome-file-list>
		<welcome-file></welcome-file>
	</welcome-file-list>

	<!-- Servlet Menu -->
	<servlet>
		<servlet-name>Menu</servlet-name>
		<servlet-class>Controller.MenuControl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Menu</servlet-name>
		<url-pattern>/menu</url-pattern>
	</servlet-mapping>

	<!-- Servlet Category -->
	<servlet>
		<servlet-name>Category</servlet-name>
		<servlet-class>Controller.CategoryControl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Category</servlet-name>
		<url-pattern>/category</url-pattern>
	</servlet-mapping>

	<!-- Servlet Detail -->
	<servlet>
		<servlet-name>Detail</servlet-name>
		<servlet-class>Controller.DetailControl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Detail</servlet-name>
		<url-pattern>/detail</url-pattern>
	</servlet-mapping>

	<!-- Servlet Search -->
	<servlet>
		<servlet-name>Search</servlet-name>
		<servlet-class>Controller.SearchControl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Search</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>

	<!-- Servlet Login -->
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>adminController.LoginControl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
		<!-- Servlet Login -->
	<servlet>
		<servlet-name>signup</servlet-name>
		<servlet-class>adminController.SignUpControl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>signup</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>



</web-app>
